<LinearLayout xmlns:tools="http://schemas.android.com/tools"
                    tools:context=".activity.MainActivity"
              xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

    <TextView android:id="@+id/main_entry_count_text_view"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:textColor="@color/simple_text_colour"
              android:textSize="@dimen/simple_text_size"
              tools:text="This is where the entry count text will appear at runtime."/>

    <Button android:id="@+id/launch_other_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/launch_other_activity"/>

</LinearLayout>